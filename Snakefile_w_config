configfile: "config/config.yaml"


rule all:
  input: expand("qc/{dataset}{ext}", dataset=config["samples"],ext=config["extension"])

rule fastqc:
    input:
        "data/{dataset}.fastq.gz"
    output:
        html="qc/{dataset}.html",
        zip="qc/{dataset}_fastqc.zip"
    params: "--quiet"
    log:
        "log/{dataset}.log"
    threads: 2
    script:
        "fastqc.py"
