SAMPLE = ["test2_S1_L005_R1_001","test2_S1_L005_R2_001"]
EXTEN = [".html","_fastqc.zip"]
rule all:
  input: expand("qc/{dataset}{ext}", dataset=SAMPLE,ext=EXTEN)

rule fastqc:
    input:
        "data/samples/{dataset}.fastq.gz"
    output:
        html="qc/{dataset}.html",
        zip="qc/{dataset}_fastqc.zip"
    params: "--quiet"
    log:
        "log/{dataset}.log"
    threads: 2
    script:
        "fastqc.py"
